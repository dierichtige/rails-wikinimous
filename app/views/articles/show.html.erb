<div class="py-3 w-100 border-bottom">
  <h2 class="d-inline show-title"><%= @article.title %></h2>
  <p class="d-inline"><%= link_to edit_article_path(@article) do %>
        <i class="fas fa-pencil-alt"></i>
      <% end %></p>
  <p class="d-inline"><%= link_to article_path(@article), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
        <i class="fas fa-trash-alt"></i>
      <% end %></p>
  </div>
  <p><%= @article.content %></p>
